<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/commentCardView"
        app:cardUseCompatPadding="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/commentContentText" android:layout_weight="1"
                tools:text="コメント表示"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/commentPostNameText" android:layout_weight="1"
                tools:text="投稿者名" android:gravity="end"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/commentPostDateText" android:layout_weight="1"
                android:gravity="end" tools:text="登校日"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
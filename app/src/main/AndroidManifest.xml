<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="momonyan.ideasharing">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity"
                  android:theme="@style/AppThemeNoAction">
        </activity>
        <activity android:name=".activity.DebugActivity">
        </activity>

        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ProfileFirstEditActivity"/>
        <activity android:name=".activity.DetailActivity"/>
        <activity android:name=".activity.ProfileDetailActivity"/>
        <activity android:name=".activity.ProfileEditActivity"/>
        <activity android:name=".activity.FavoriteListActivity"/>
        <activity
                android:name=".CommentEditDialogCreate"
                android:launchMode="singleInstance"/>
        <activity android:name=".activity.DetailSearchActivity"/>
    </application>

</manifest>